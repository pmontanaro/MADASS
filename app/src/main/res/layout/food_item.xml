<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:cardElevation="4dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="293dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txtAddToCart"

                android:layout_width="fill_parent"
                android:layout_height="34dp"
                android:layout_alignBottom="@+id/txtDesc"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:text="Press to add to cart"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textColor="@color/fbutton_default_shadow_color"
                />


            <TextView
                android:id="@+id/txtPrice"

                android:layout_width="fill_parent"
                android:layout_height="34dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtDesc"
                android:layout_width="fill_parent"
                android:layout_height="124dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="13dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="TextView"
                android:textSize="18sp" />

         <!--   <android.support.design.widget.FloatingActionButton
                android:id="@+id/btnCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="38dp"
                android:layout_marginEnd="46dp"
                android:clickable="true"
                android:elevation="6dp"
                app:pressedTranslationZ="12dp"

                app:backgroundTint="@color/fbutton_color_concrete"
                app:srcCompat="@drawable/ic_add_shopping_cart"
                /> -->
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/food_image"
            android:layout_width="291dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/assbg" />

        <TextView
            android:id="@+id/food_name"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:background="@color/overlayBackground"
            android:gravity="center"
            android:text="Name of Food"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>